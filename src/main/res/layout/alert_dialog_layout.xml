<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alert_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/alert_dialog_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/alert_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/bookos"
            android:gravity="start|center_vertical"
            android:padding="15dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/alert_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/bookos"
            android:gravity="start|center_vertical"
            android:padding="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/alert_dialog_layout_buttons_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:id="@+id/alert_dialog_layout_negative_button_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <Button
                    android:id="@+id/alert_dialog_negative_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@color/transparent"
                    android:fontFamily="@font/bookos"
                    android:padding="4dp"
                    android:textColor="#097A0E"
                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/alert_dialog_layout_positive_button_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <Button
                    android:id="@+id/alert_dialog_positive_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@color/transparent"
                    android:fontFamily="@font/bookos"
                    android:padding="4dp"
                    android:textColor="#097A0E"
                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>