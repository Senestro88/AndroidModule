<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/floating_video_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/floating_video_background"
		android:layout_width="225dp"
		android:layout_height="450dp"
		android:background="#424242"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical"
		android:padding="10dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		tools:ignore="MissingConstraints,UselessParent">

		<LinearLayout
			android:id="@+id/floating_linear1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#000000"
			android:orientation="horizontal"
			android:padding="8dp">

			<ImageView
				android:id="@+id/floating_ic_logo"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_gravity="center_horizontal|center_vertical"
				android:background="@android:color/transparent"
				android:focusable="false"
				android:padding="4dp"
				android:scaleType="fitCenter"
				android:src="@mipmap/ic_transparent"
				tools:ignore="ContentDescription" />

			<LinearLayout
				android:id="@+id/floating_linear4"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:gravity="center_vertical|end"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/floating_ic_open"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp"
					android:background="@android:color/transparent"
					android:focusable="false"
					android:scaleType="fitCenter"
					android:src="@mipmap/ic_fullscreen_white"
					tools:ignore="ContentDescription" />

				<ImageView
					android:id="@+id/floating_ic_close"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp"
					android:background="@android:color/transparent"
					android:focusable="false"
					android:scaleType="fitCenter"
					android:src="@mipmap/ic_close_white"
					tools:ignore="ContentDescription" />
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/floating_linear5"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_weight="1"
			android:background="#000000"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:padding="8dp">

			<VideoView
				android:id="@+id/floating_video_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center_horizontal|center_vertical"
				android:background="@android:color/transparent" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/floating_linear3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#000000"
			android:orientation="horizontal"
			android:padding="8dp">

			<ImageView
				android:id="@+id/floating_ic_prev"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginLeft="6dp"
				android:layout_marginRight="6dp"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:focusable="false"
				android:scaleType="fitCenter"
				android:src="@mipmap/ic_keyboard_arrow_left_white"
				tools:ignore="ContentDescription" />

			<ImageView
				android:id="@+id/floating_ic_play"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginLeft="6dp"
				android:layout_marginRight="6dp"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:focusable="false"
				android:scaleType="fitCenter"
				android:src="@mipmap/ic_play_arrow_white"
				tools:ignore="ContentDescription" />

			<ImageView
				android:id="@+id/floating_ic_next"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginLeft="6dp"
				android:layout_marginRight="6dp"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:focusable="false"
				android:scaleType="fitCenter"
				android:src="@mipmap/ic_keyboard_arrow_right_white"
				tools:ignore="ContentDescription" />
		</LinearLayout>
	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>